<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/write"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_pic_arrowtext"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="13dp"
        android:padding="7dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/custom_arrowtextview_tv_mian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/iv_pic_arrowtext"
        android:textColor="@color/black"
        android:textSize="15sp"
        tools:text="测试文字" />

    <ImageView
        android:id="@+id/custom_arrowtextview_iv_arrow"
        android:layout_width="17dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:src="@drawable/icon_jiantouright" />

    <TextView
        android:id="@+id/custom_arrowtextview_tv_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/custom_arrowtextview_iv_arrow"
        android:textSize="14sp"
        android:textColor="@color/road_gray"
        android:text="" />

</RelativeLayout>