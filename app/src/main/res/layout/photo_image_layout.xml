<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/top_bg"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="34dp"
            android:layout_height="30dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="18dp"
            android:text="照片"
            android:textColor="@color/white"
            android:textSize="22sp" />
        <TextView
            android:id="@+id/tv_photo_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 张"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:gravity="center|center_vertical"
            android:layout_marginTop="18dp" />

        <Button
            android:id="@+id/btn_clear_all"
            android:layout_width="70dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:gravity="end|center_vertical"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/clear_all_photo" />
    </RelativeLayout>



    <GridView
        android:layout_weight="4"
        android:id="@+id/gv_add_img"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@drawable/bg_take_photo"
        android:numColumns="3"
        android:verticalSpacing="3dp"
        android:layout_margin="0dp" >

    </GridView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/light_gray_1"
        android:orientation="horizontal"
        android:layout_marginTop="0dp">

        <Button
            android:id="@+id/btn_album"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="2dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/btn_album"
            android:text="从相册选择"
            android:textColor="@color/mediumaquamarine" />

        <Button
            android:id="@+id/btn_take_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="2dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/btn_take_photo"
            android:text="拍照"
            android:textColor="@color/light_purple" />
    </LinearLayout>
</LinearLayout>